<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Prime Mart - Checkout</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
  <link rel="stylesheet" href="/styles.css">
  <style>
    body {
      padding-top: 70px;
    }

    .navbar {
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    .search-container {
      position: relative;
    }

    .search-bar {
      display: none;
      position: absolute;
      top: 100%;
      right: 0;
      width: 200px;
      z-index: 1000;
    }

    .search-bar.active {
      display: block;
    }

    .checkout-section {
      padding: 50px 0;
    }

    .billing-details h5,
    .order-summary h5,
    .shipping-options h5,
    .payment-options h5 {
      font-size: 1.2rem;
      margin-bottom: 20px;
      text-transform: uppercase;
    }

    .form-label {
      font-weight: bold;
    }

    .form-control,
    .form-select {
      border: 1px solid #ccc;
      border-radius: 5px;
      padding: 10px;
      margin-bottom: 15px;
    }

    .order-item {
      display: flex;
      align-items: center;
      margin-bottom: 15px;
      border-bottom: 1px solid #eee;
      padding-bottom: 10px;
    }

    .order-item-img {
      width: 80px;
      height: 80px;
      object-fit: cover;
      margin-right: 15px;
    }

    .order-item-details p {
      margin: 0;
    }

    .order-totals {
      margin-top: 20px;
    }

    .order-totals p {
      display: flex;
      justify-content: space-between;
      margin-bottom: 10px;
    }

    .order-totals p.total {
      font-weight: bold;
      font-size: 1.2rem;
    }

    .payment-option {
      border: 1px solid #ccc;
      padding: 15px;
      border-radius: 5px;
      margin-bottom: 15px;
    }

    .payment-option label {
      margin: 0;
    }

    .order-notes textarea {
      width: 100%;
      border: 1px solid #ccc;
      border-radius: 5px;
      padding: 10px;
      margin-top: 10px;
    }

    .checkout-buttons {
      display: flex;
      justify-content: space-between;
      margin-top: 20px;
    }

    .place-order-btn {
      background-color: #003087;
      color: white;
      border: none;
      padding: 10px 20px;
      text-transform: uppercase;
      font-weight: bold;
    }

    .return-cart {
      color: #003087;
      text-decoration: none;
    }

    .terms-text {
      font-size: 0.9rem;
      color: #666;
      margin-top: 10px;
    }

    .terms-text a {
      color: #003087;
    }

    @media (max-width: 767px) {
      .checkout-buttons {
        flex-direction: column;
        gap: 10px;
      }

      .place-order-btn,
      .return-cart {
        width: 100%;
        text-align: center;
      }

      .order-item-img {
        width: 60px;
        height: 60px;
      }
    }
  </style>
</head>
<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm fixed-top">
    <div class="container">
      <a class="navbar-brand" href="/">
        <img src="https://primemartdeals.com/wp-content/uploads/2024/08/Logo-13.png" alt="Prime Mart Logo" style="height: 40px;">
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav mx-auto">
          <li class="nav-item">
            <a class="nav-link" href="/">HOME</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/about">ABOUT US</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/shop">SHOP</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/contact">CONTACT</a>
          </li>
        </ul>
        <ul class="navbar-nav ms-auto">
          <% if (session.user) { %>
            <li class="nav-item">
              <a class="nav-link cart-trigger" href="#" id="cart-trigger">CART | ₹<span id="cart-total-nav">0.00</span></a>
            </li>
            <li class="nav-item">
              <span class="nav-link">My Account</span>
            </li>
            <li class="nav-item">
              <div class="search-container">
                <i class="bi bi-search search-icon"></i>
                <input type="text" class="search-bar" placeholder="Search...">
              </div>
            </li>
            <li class="nav-item">
              <a class="nav-link btn btn-outline-danger" href="/logout">LOGOUT</a>
            </li>
          <% } else { %>
            <li class="nav-item">
              <div class="search-container">
                <i class="bi bi-search search-icon"></i>
                <input type="text" class="search-bar" placeholder="Search...">
              </div>
            </li>
            <li class="nav-item">
              <a class="nav-link cart-trigger" href="#" id="cart-trigger">CART | ₹<span id="cart-total-nav">0.00</span></a>
            </li>
            <li class="nav-item">
              <a class="nav-link btn btn-outline-primary" href="#" data-bs-toggle="modal" data-bs-target="#authModal" data-form="login">LOGIN</a>
            </li>
          <% } %>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Checkout Section -->
  <section class="checkout-section">
    <div class="container">
      <div class="row">
        <!-- Billing Details -->
        <div class="col-md-8">
          <div class="billing-details">
            <h5>Billing Details</h5>
            <form id="checkout-form">
              <!-- Contact Information -->
              <div class="mb-3">
                <label for="email" class="form-label">Contact Information</label>
                <p>We will use this email to send you detailed updates about your order.</p>
                <input type="email" class="form-control" id="email" name="email" placeholder="abc@example.com" required>
              </div>

              <!-- Shipping Address -->
              <div class="mb-3">
                <label class="form-label">Shipping Address</label>
                <p>Enter the address where you want your order to be delivered.</p>
                <select class="form-select" name="country" required>
                  <option value="" disabled selected>Select the country/region</option>
                  <option value="IN">India</option>
                  <!-- Add more countries as needed -->
                </select>
                <div class="row">
                  <div class="col-md-6">
                    <input type="text" class="form-control" name="firstName" placeholder="First name" required>
                  </div>
                  <div class="col-md-6">
                    <input type="text" class="form-control" name="lastName" placeholder="Last name" required>
                  </div>
                </div>
                <input type="text" class="form-control" name="address" placeholder="Address, street, etc." required>
                <input type="text" class="form-control" name="city" placeholder="City" required>
                <div class="row">
                  <div class="col-md-6">
                    <input type="text" class="form-control" name="state" placeholder="State/County" required>
                  </div>
                  <div class="col-md-6">
                    <input type="text" class="form-control" name="postalCode" placeholder="Postal Code" required>
                  </div>
                </div>
                <input type="tel" class="form-control" name="phone" placeholder="Phone (Optional)">
              </div>

              <!-- Different Address for Billing -->
              <div class="mb-3 form-check">
                <input type="checkbox" class="form-check-input" id="differentBilling">
                <label class="form-check-label" for="differentBilling">Use a different address for billing</label>
              </div>

              <!-- Shipping Options -->
              <div class="shipping-options mb-3">
                <h5>Shipping Options</h5>
                <p>Enter a shipping address to view shipping options.</p>
              </div>

              <!-- Payment Options -->
              <div class="payment-options mb-3">
                <h5>Payment Options</h5>
                <div class="payment-option">
                  <input type="radio" id="cod" name="paymentMethod" value="cod" checked>
                  <label for="cod">Cash on delivery <br> Pay with cash upon delivery</label>
                </div>
              </div>

              <!-- Order Notes -->
              <div class="order-notes mb-3">
                <h5>Add a note to your order</h5>
                <textarea rows="3" placeholder="Add a note to your order"></textarea>
              </div>

              <!-- Terms and Buttons -->
              <p class="terms-text">
                By proceeding with your purchase you agree to our <a href="/terms">Terms & Conditions</a> and <a href="/privacy">Privacy Policy</a>.
              </p>
              <div class="checkout-buttons">
                <a href="/cart" class="return-cart">← RETURN TO CART</a>
                <button type="submit" class="btn place-order-btn">PLACE ORDER</button>
              </div>
            </form>
          </div>
        </div>

        <!-- Order Summary -->
        <div class="col-md-4">
          <div class="order-summary">
            <h5>Order Summary</h5>
            <div id="order-items"></div>
            <div class="order-totals">
              <p>Subtotal <span id="order-subtotal">₹0.00</span></p>
              <p>Delivery <span id="order-delivery">Enter address to calculate</span></p>
              <p class="total">Total <span id="order-total">₹0.00</span></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Footer -->
  <footer class="bg-purple text-white py-4">
    <div class="container">
      <div class="row">
        <div class="col-md-4">
          <h5>ABOUT US</h5>
          <p>
            Welcome to Prime Mart, the ultimate destination for premium BRANDED clothing. We specialize in offering a curated selection of high-quality, stylish apparel from top global brands. Our collection is designed for fashion-conscious individuals.
          </p>
        </div>
        <div class="col-md-4">
          <h5>QUICK LINKS</h5>
          <ul class="list-unstyled">
            <li><a href="/about" class="text-white">About us</a></li>
            <li><a href="/privacy" class="text-white">Privacy Policy</a></li>
            <li><a href="/terms" class="text-white">Terms and Conditions</a></li>
          </ul>
        </div>
        <div class="col-md-4">
          <h5>REACH US AT</h5>
          <p>PRIME MART DEALS</p>
          <p><a href="mailto:support@classicstore.co" class="text-white">support@classicstore.co</a></p>
        </div>
      </div>
      <div class="text-center mt-3">
        <p>© 2025 Prime Mart. All rights reserved.</p>
      </div>
    </div>
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <script src="/scripts.js"></script>
  <script>
    // Search bar toggle functionality
    document.querySelector('.search-icon').addEventListener('click', function() {
      const searchBar = document.querySelector('.search-bar');
      searchBar.classList.toggle('active');
      if (searchBar.classList.contains('active')) {
        searchBar.focus();
      }
    });

    // Function to clean invalid cart data
    function cleanCartData() {
      let cart = JSON.parse(localStorage.getItem('cart')) || [];
      cart = cart.filter(item => {
        return item.id && Number(item.price) > 0 && Number(item.quantity) > 0 && item.name && item.images && item.size;
      });
      localStorage.setItem('cart', JSON.stringify(cart));
      return cart;
    }

    // Function to update order summary
    function updateOrderSummary() {
      const cart = cleanCartData();
      const orderItemsContainer = document.getElementById('order-items');
      orderItemsContainer.innerHTML = '';

      if (!cart || cart.length === 0) {
        orderItemsContainer.innerHTML = '<p>Your cart is empty.</p>';
        return;
      }

      cart.forEach((item, index) => {
        const price = Number(item.price) || 0;
        const quantity = Number(item.quantity) || 1;
        const image = Array.isArray(item.images) && item.images.length > 0 ? item.images[0] : 'https://images.unsplash.com/photo-1556906781-9a412961c28c';
        const subtotal = price * quantity;
        const orderItem = `
          <div class="order-item">
            <span>${index + 1}.</span>
            <img src="${image}" alt="${item.name}" class="order-item-img">
            <div class="order-item-details">
              <p>${item.name}</p>
              <p>Size: ${item.size}</p>
              <p>₹${subtotal.toFixed(2)}</p>
            </div>
          </div>
        `;
        orderItemsContainer.innerHTML += orderItem;
      });

      // Update totals
      const subtotal = cart.reduce((sum, item) => {
        const price = Number(item.price) || 0;
        const quantity = Number(item.quantity) || 1;
        return sum + price * quantity;
      }, 0);
      document.getElementById('order-subtotal').textContent = `₹${subtotal.toFixed(2)}`;
      document.getElementById('order-total').textContent = `₹${subtotal.toFixed(2)}`; // Assuming delivery is free or not calculated
      document.getElementById('cart-total-nav').textContent = subtotal.toFixed(2);
    }

    // Handle form submission
    document.getElementById('checkout-form').addEventListener('submit', function(e) {
      e.preventDefault();
      const cart = cleanCartData();
      if (cart.length === 0) {
        alert('Your cart is empty. Please add items to proceed.');
        return;
      }
      // Clear cart after placing order
      localStorage.setItem('cart', JSON.stringify([]));
      alert('Order placed successfully!');
      window.location.href = '/order-complete'; // Redirect to order completion page
    });

    // Load order summary on page load
    document.addEventListener('DOMContentLoaded', () => {
      cleanCartData();
      updateOrderSummary();
    });
  </script>
</body>
</html>