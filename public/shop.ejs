              let qty = parseInt(quantityInput.value);
              quantityInput.value = qty + 1;
            });

            // Add event listener to "Add to Cart" button with the new flow
            addToCartButton.addEventListener('click', function addToCartHandler() {
              const id = parseInt(addToCartButton.dataset.id);
              const product = products.find(p => p.id === id);
              const cart = JSON.parse(localStorage.getItem('cart')) || [];
              const selectedSize = document.querySelector('input[name="quickViewSize"]:checked').value;
              const quantity = parseInt(document.getElementById('quick-view-quantity').value);
              const existingItem = cart.find(item => item.id === id && item.size === selectedSize);

              if (existingItem) {
                existingItem.quantity = (existingItem.quantity || 1) + quantity;
              } else {
                cart.push({ ...product, quantity: quantity, size: selectedSize });
              }

              localStorage.setItem('cart', JSON.stringify(cart));
              updateCartTotal();
              updateCartSidebar();

              // Change button text to "Go to Cart" and update its behavior
              addToCartButton.textContent = "GO TO CART";
              addToCartButton.removeEventListener('click', addToCartHandler); // Remove the "Add to Cart" handler
              addToCartButton.addEventListener('click', () => {
                window.location.href = '/cart'; // Redirect to cart page
              });
            });
          });
        });
      }, 300);
