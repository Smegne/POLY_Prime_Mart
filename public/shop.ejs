  <style>
    /* Ensure the product card container is positioned relatively */
    .product-card-container {
      position: relative;
    }

    /* Style for the Quick View button overlay */
    .quick-view-overlay {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      opacity: 0;
      transition: opacity 0.3s ease;
    }

    /* Show Quick View button on hover over the image */
    .product-card-container:hover .quick-view-overlay {
      opacity: 1;
    }

    /* Dim the image on hover to make the button stand out */
    .product-card-container:hover .card-img-top {
      opacity: 0.8;
    }

    /* Sidebar styles */
    .sidebar {
      border-right: 1px solid #ddd;
      padding-right: 20px;
      transition: transform 0.3s ease;
    }

    .sidebar h5 {
      font-size: 1.1rem;
      font-weight: bold;
      color: #6f42c1;
      margin-bottom: 15px;
    }

    .sidebar ul {
      list-style: none;
      padding: 0;
    }

    .sidebar ul li {
      margin-bottom: 10px;
    }

    .sidebar ul li a {
      text-decoration: none;
      color: #333;
    }

    .sidebar ul li a:hover {
      color: #6f42c1;
    }

    /* Price range filter styles */
    .price-filter {
      margin-top: 30px;
    }

    .price-filter h5 {
      font-size: 1.1rem;
      font-weight: bold;
      color: #6f42c1;
    }

    .price-range-container {
      display: flex;
      gap: 10px;
      margin: 10px 0;
    }

    .price-range {
      width: 100%;
    }

    .price-range::-webkit-slider-thumb {
      background: #6f42c1;
    }

    .price-range::-moz-range-thumb {
      background: #6f42c1;
    }

    .filter-btn {
      background-color: #6c757d;
      color: white;
      border: none;
      padding: 5px 15px;
      font-size: 0.9rem;
    }

    .filter-btn:hover {
      background-color: #5a6268;
    }

    /* Sorting dropdown */
    .sort-section {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 20px;
    }

    .sort-section select {
      width: 200px;
      padding: 5px;
      border-radius: 5px;
      border: 1px solid #ddd;
    }

    /* Animation for product list update */
    #product-list {
      transition: opacity 0.3s ease;
    }

    #product-list.fade {
      opacity: 0;
    }

    /* Sidebar toggle for mobile */
    .sidebar-toggle {
      display: none;
      background-color: #6f42c1;
      color: white;
      border: none;
      padding: 10px;
      margin-bottom: 15px;
    }

    /* Cart Sidebar Styles */
    #cart-sidebar {
      position: fixed;
      top: 0;
      right: -400px;
      width: 400px;
      height: 100%;
      background-color: #fff;
      box-shadow: -2px 0 5px rgba(0, 0, 0, 0.2);
      transition: right 0.3s ease;
      z-index: 1000;
      display: flex;
      flex-direction: column;
      padding: 20px;
    }

    #cart-sidebar.active {
      right: 0;
    }

    .cart-sidebar-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 20px;
    }

    .cart-sidebar-header h2 {
      font-size: 1.5rem;
      font-weight: bold;
      color: #333;
    }

    .close-cart-sidebar {
      background: none;
      border: none;
      font-size: 1.5rem;
      cursor: pointer;
      color: #333;
    }

    .cart-item {
      border-bottom: 1px solid #eee;
      padding-bottom: 10px;
      display: flex;
      align-items: center;
    }

    .cart-item-img {
      width: 80px;
      height: 80px;
      object-fit: cover;
    }

    .cart-item-details h6 {
      font-size: 1rem;
      margin-bottom: 5px;
    }

    .cart-item-details p {
      font-size: 0.9rem;
      color: #ff6200;
      margin-bottom: 5px;
    }

    .cart-item-details .quantity {
      font-size: 0.9rem;
      color: #333;
    }

    .cart-sidebar-footer {
      margin-top: auto;
      padding-top: 20px;
      border-top: 1px solid #eee;
    }

    .cart-sidebar-footer p {
      font-size: 1.2rem;
      font-weight: bold;
      margin-bottom: 10px;
    }

    #cd-shadow-layer {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(0, 0, 0, 0.5);
      z-index: 999;
      opacity: 0;
      visibility: hidden;
      transition: opacity 0.3s ease, visibility 0.3s ease;
    }

    #cd-shadow-layer.active {
      opacity: 1;
      visibility: visible;
    }

    /* Quick View Images */
    .quick-view-images img {
      width: 100%;
      height: auto;
      object-fit: cover;
      margin-bottom: 10px;
      border-radius: 5px;
    }

    .quick-view-images {
      max-height: 400px;
      overflow-y: auto;
    }

    /* Stacked Images in Product Card */
    .stacked-images img {
      width: 100%;
      height: auto;
      object-fit: cover;
      margin-bottom: 10px;
      border-radius: 5px;
    }

    .stacked-images p {
      text-align: center;
      margin-bottom: 5px;
      font-size: 0.9rem;
      color: #666;
    }

    /* Remove button style */
    .remove-cart-item {
      background: none;
      border: none;
      font-size: 1.2rem;
      cursor: pointer;
      color: #ff0000;
      margin-right: 10px;
    }

    .remove-cart-item:hover {
      color: #cc0000;
    }

    @media (max-width: 991px) {
      .sidebar {
        position: fixed;
        top: 70px;
        left: 0;
        height: calc(100vh - 70px);
        width: 250px;
        background-color: white;
        transform: translateX(-100%);
        z-index: 1000;
        padding: 20px;
      }

      .sidebar.active {
        transform: translateX(0);
      }

      .sidebar-toggle {
        display: block;
      }

      #cart-sidebar {
        width: 100%;
        right: -100%;
      }

      #cart-sidebar.active {
        right: 0;
      }
    }
  </style>
</head>
