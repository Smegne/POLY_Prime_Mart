  <style>
    /* Hero Section */
    .hero-section {
      position: relative;
      background: linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.6)), url('https://images.unsplash.com/photo-1509631179647-0177331693ae') no-repeat center center;
      background-size: cover;
      background-attachment: fixed;
      color: white;
      padding: 150px 0;
      text-align: center;
      overflow: hidden;
    }

    .hero-background {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: 0;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .hero-model {
      position: absolute;
      width: 300px;
      height: auto;
      object-fit: cover;
      opacity: 0;
      transition: opacity 1s ease-in-out;
      animation: fadeInModel 1s forwards;
      top: 50%;
      transform: translateY(-50%);
    }

    .model-1 { left: 0%; animation-delay: 0.8s; }
    .model-2 { left: 25%; animation-delay: 0.10s; }
    .model-3 { left: 50%; animation-delay: 0.12s; }
    .model-4 { left: 75%; animation-delay: 0.14s; }

    @keyframes fadeInModel {
      to {
        opacity: 0.8;
      }
    }

    .banner-container h3 {
      font-size: 2.5rem;
      font-weight: 300;
      letter-spacing: 2px;
      text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.5);
      animation: fadeInText 1s ease-in-out;
    }

    .banner-container h2 {
      font-size: 3.5rem;
      font-weight: 700;
      letter-spacing: 1px;
      text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.5);
      animation: fadeInText 1.2s ease-in-out;
    }

    .banner-container + p {
      font-size: 1.5rem;
      font-weight: 300;
      text-shadow: 1px 1px 5px rgba(0, 0, 0, 0.5);
      animation: fadeInText 1.4s ease-in-out;
    }

    .shop-now-btn {
      background-color: #ff6200;
      border: none;
      padding: 12px 30px;
      font-size: 1.2rem;
      font-weight: bold;
      text-transform: uppercase;
      letter-spacing: 1px;
      transition: background-color 0.3s ease, transform 0.3s ease;
      animation: fadeInText 1.6s ease-in-out;
    }

    .shop-now-btn:hover {
      background-color: #e05500;
      transform: translateY(-3px);
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
    }

    @keyframes fadeInText {
      from {
        opacity: 0;
        transform: translateY(20px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .snowflake {
      position: absolute;
      color: white;
      font-size: 1.2em;
      font-family: Arial, sans-serif;
      text-shadow: 0 0 5px rgba(0, 0, 0, 0.5);
      z-index: 1;
      pointer-events: none;
    }

    @keyframes fall {
      to {
        transform: translateY(100vh) rotate(360deg);
        opacity: 0;
      }
    }

    @media (max-width: 767px) {
      .hero-section {
        padding: 100px 0;
        background-attachment: scroll;
      }

      .banner-container h3 {
        font-size: 1.8rem;
      }

      .banner-container h2 {
        font-size: 2.2rem;
      }

      .banner-container + p {
        font-size: 1.2rem;
      }

      .shop-now-btn {
        padding: 10px 20px;
        font-size: 1rem;
      }

      .hero-model {
        width: 150px;
      }

      .model-1 { left: 50%; top: 20%; transform: translate(-50%, 0); }
      .model-2 { left: 50%; top: 40%; transform: translate(-50%, 0); }
      .model-3 { left: 50%; top: 60%; transform: translate(-50%, 0); }
      .model-4 { left: 50%; top: 80%; transform: translate(-50%, 0); }
    }

    .product-card-container {
      position: relative;
    }

    .card-img-top {
      height: 200px;
      object-fit: cover;
    }

    .quick-view-overlay {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      opacity: 0;
      transition: opacity 0.3s ease;
    }

    .product-card-container:hover .quick-view-overlay {
      opacity: 1;
    }

    .product-card-container:hover .card-img-top {
      opacity: 0.8;
    }

    .discount-badge {
