  <style>
    /* Ensure the product card container is positioned relatively */
    .product-card-container {
      position: relative;
    }

    /* Style for the Quick View button overlay */
    .quick-view-overlay {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      opacity: 0;
      transition: opacity 0.3s ease;
    }

    /* Show Quick View button on hover over the image */
    .product-card-container:hover .quick-view-overlay {
      opacity: 1;
    }

    /* Optional: Dim the image on hover to make the button stand out */
    .product-card-container:hover .card-img-top {
      opacity: 0.8;
    }

    /* Enhanced snow effect styles */
    .snowflakes {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      pointer-events: none;
      z-index: 1;
    }

    .snowflake {
      color: #fff;
      font-size: 1.5em;
      font-family: Arial, sans-serif;
      text-shadow: 0 0 10px rgba(255, 255, 255, 0.8);
      opacity: 0.9;
      position: absolute;
      animation: fall linear infinite;
    }

    @keyframes fall {
      0% {
        opacity: 0.5;
        transform: translateY(0vh);
      }
      20% {
        opacity: 0.9;
      }
      100% {
        opacity: 0.5;
        transform: translateY(100vh);
      }
    }

    /* Generate varied animations for snowflakes */
    .snowflake:nth-child(odd) {
      animation-duration: 10s;
    }

    .snowflake:nth-child(even) {
      animation-duration: 15s;
    }

    .snowflake:nth-child(3n) {
      animation-duration: 12s;
    }

    /* Distribute snowflakes across the screen */
    .snowflake:nth-child(1) { left: 5%; animation-delay: 0s; }
    .snowflake:nth-child(2) { left: 10%; animation-delay: 1s; }
    .snowflake:nth-child(3) { left: 15%; animation-delay: 2s; }
    .snowflake:nth-child(4) { left: 20%; animation-delay: 0.5s; }
    .snowflake:nth-child(5) { left: 25%; animation-delay: 3s; }
    .snowflake:nth-child(6) { left: 30%; animation-delay: 1.5s; }
    .snowflake:nth-child(7) { left: 35%; animation-delay: 4s; }
    .snowflake:nth-child(8) { left: 40%; animation-delay: 2.5s; }
    .snowflake:nth-child(9) { left: 45%; animation-delay: 5s; }
    .snowflake:nth-child(10) { left: 50%; animation-delay: 0s; }
    .snowflake:nth-child(11) { left: 55%; animation-delay: 1s; }
    .snowflake:nth-child(12) { left: 60%; animation-delay: 2s; }
    .snowflake:nth-child(13) { left: 65%; animation-delay: 0.5s; }
    .snowflake:nth-child(14) { left: 70%; animation-delay: 3s; }
    .snowflake:nth-child(15) { left: 75%; animation-delay: 1.5s; }
    .snowflake:nth-child(16) { left: 80%; animation-delay: 4s; }
    .snowflake:nth-child(17) { left: 85%; animation-delay: 2.5s; }
    .snowflake:nth-child(18) { left: 90%; animation-delay: 5s; }
    .snowflake:nth-child(19) { left: 95%; animation-delay: 0s; }
    .snowflake:nth-child(20) { left: 8%; animation-delay: 2s; }
    .snowflake:nth-child(21) { left: 12%; animation-delay: 3s; }
    .snowflake:nth-child(22) { left: 18%; animation-delay: 1s; }
    .snowflake:nth-child(23) { left: 22%; animation-delay: 4s; }
    .snowflake:nth-child(24) { left: 28%; animation-delay: 2.5s; }
    .snowflake:nth-child(25) { left: 32%; animation-delay: 0.5s; }

    /* Search bar styles */
    .search-container {
      position: relative;
      display: flex;
      align-items: center;
    }
    .search-icon {
      cursor: pointer;
      font-size: 1.2rem;
      color: #333;
    }
    .search-bar {
      width: 0;
      opacity: 0;
      border: none;
      border-radius: 5px;
      padding: 5px 10px;
      margin-left: 10px;
      transition: width 0.3s ease, opacity 0.3s ease;
    }
    .search-bar.active {
      width: 200px;
      opacity: 1;
    }
    .search-bar:focus {
      outline: none;
      border: 1px solid #ff6200;
    }

    /* Banner styles */
    .banner-container {
      position: relative;
      display: inline-block;
      text-align: center;
    }
    .banner-container::after {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-color: rgba(135, 206, 235, 0.8);
      border-radius: 10px;
      z-index: -1;
      transform: translateX(0);
      transition: width 0.3s ease;
    }
    .banner-container.extended::after {
      width: 150%;
      transform: translateX(20%);
    }
  </style>
</head>
