    }

    .cart-sidebar-header h2 {
      font-size: 1.5rem;
      font-weight: bold;
      color: #333;
    }

    .close-cart-sidebar {
      background: none;
      border: none;
      font-size: 1.5rem;
      cursor: pointer;
      color: #333;
    }

    .cart-item {
      border-bottom: 1px solid #eee;
      padding-bottom: 8px;
      margin-bottom: 8px;
      display: flex;
      align-items: center;
      min-height: 80px;
    }

    .cart-item-img {
      width: 60px;
      height: 60px;
      object-fit: cover;
      margin-right: 10px;
    }

    .cart-item-details h6 {
      font-size: 0.95rem;
      margin-bottom: 3px;
      line-height: 1.2;
    }

    .cart-item-details p {
      font-size: 0.85rem;
      color: #ff6200;
      margin-bottom: 3px;
      line-height: 1.2;
    }

    .cart-item-details .quantity {
      font-size: 0.85rem;
      color: #333;
      margin-bottom: 0;
    }

    .cart-sidebar-footer {
      margin-top: auto;
      padding-top: 15px;
      border-top: 1px solid #eee;
    }

    .cart-sidebar-footer p {
      font-size: 1.2rem;
      font-weight: bold;
      margin-bottom: 10px;
    }

    #cart-sidebar-items {
      flex: 1;
      overflow-y: scroll; /* Changed to scroll to always show scrollbar */
      margin-bottom: 15px;
      position: relative;
    }

    /* Custom Scrollbar Styling */
    #cart-sidebar-items::-webkit-scrollbar {
      width: 8px;
    }

    #cart-sidebar-items::-webkit-scrollbar-track {
      background: #f1f1f1;
      border-radius: 4px;
    }

    #cart-sidebar-items::-webkit-scrollbar-thumb {
      background: #ff6200;
      border-radius: 4px;
    }

    #cart-sidebar-items::-webkit-scrollbar-thumb:hover {
      background: #e05500;
    }

    /* Scroll Indicator (Gradient at bottom when scrollable) */
    #cart-sidebar-items::after {
      content: '';
      position: absolute;
      bottom: 0;
      left: 0;
      width: 100%;
      height: 20px;
      background: linear-gradient(transparent, rgba(255, 255, 255, 0.8));
      pointer-events: none;
      opacity: 0;
      transition: opacity 0.3s ease;
    }

    #cart-sidebar-items.scrollable::after {
      opacity: 1;
    }

    #cd-shadow-layer {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(0, 0, 0, 0.5);
      z-index: 999;
      opacity: 0;
      visibility: hidden;
      transition: opacity 0.3s ease, visibility 0.3s ease;
    }

    #cd-shadow-layer.active {
      opacity: 1;
      visibility: visible;
    }

    .remove-cart-item {
      background: none;
      border: none;
      font-size: 1.2rem;
      cursor: pointer;
      color: #ff0000;
      margin-right: 10px;
    }

    .remove-cart-item:hover {
      color: #cc0000;
    }

    /* Cart Icon and Badge Styling */
    .cart-trigger {
      position: relative;
      display: flex;
      align-items: center;
      gap: 5px;
    }

    .cart-icon {
      font-size: 1.2rem;
      position: relative;
    }

    .cart-badge {
