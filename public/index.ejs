  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <script src="/scripts.js"></script>
  <script>
    // Search bar toggle functionality
    document.querySelector('.search-icon').addEventListener('click', function() {
      const searchBar = document.querySelector('.search-bar');
      searchBar.classList.toggle('active');
      if (searchBar.classList.contains('active')) {
        searchBar.focus();
      }
    });

    // Banner background extension on load
    document.addEventListener('DOMContentLoaded', () => {
      const banner = document.querySelector('.banner-container');
      setTimeout(() => {
        banner.classList.add('extended');
      }, 500);
    });

    // Cart sidebar toggle functionality
    const cartTrigger = document.getElementById('cart-trigger');
    const cartSidebar = document.getElementById('cart-sidebar');
    const shadowLayer = document.getElementById('cd-shadow-layer');
    const closeCartBtn = document.querySelector('.close-cart-sidebar');

    cartTrigger.addEventListener('click', (e) => {
      e.preventDefault();
      cartSidebar.classList.add('active');
      shadowLayer.classList.add('active');
      updateCartSidebar();
    });

    closeCartBtn.addEventListener('click', () => {
      cartSidebar.classList.remove('active');
      shadowLayer.classList.remove('active');
    });

    shadowLayer.addEventListener('click', () => {
      cartSidebar.classList.remove('active');
      shadowLayer.classList.remove('active');
    });

    // Simulated product data
    const products = [
      { id: 1, name: "Adidas Mens Blue Classic Tracksuit", price: 1999.00, originalPrice: 4999.00, image: "https://images.unsplash.com/photo-1599058917212-d750089bc07e" },
      { id: 2, name: "Adidas Mens Black Classic Tracksuit", price: 2099.00, originalPrice: 5099.00, image: "https://images.unsplash.com/photo-1617019114580-58e139fa5289" },
      { id: 3, name: "Adidas White Zip-Front Tracksuit", price: 2990.00, originalPrice: 4999.00, image: "https://images.unsplash.com/photo-1618354691551-7a3f04edd6aa" },
      { id: 4, name: "Nike Mens Red Hoodie", price: 2499.00, originalPrice: 5999.00, image: "https://images.unsplash.com/photo-1618354691373-d851c5c3a990" },
      { id: 5, name: "Puma Mens Grey Joggers", price: 1799.00, originalPrice: 3999.00, image: "https://images.unsplash.com/photo-1600585154340-be6161a56a0c" },
      { id: 6, name: "Jordan Mens Green Tracksuit", price: 2999.00, originalPrice: 6999.00, image: "https://images.unsplash.com/photo-1574201635302-388dd92a4c3f" },
      { id: 7, name: "Under Armour Mens Blue Jacket", price: 3499.00, originalPrice: 7999.00, image: "https://images.unsplash.com/photo-1551488831-00ddcb6c0a3a" },
      { id: 8, name: "Reebok Mens Black Hoodie", price: 2299.00, originalPrice: 5499.00, image: "https://images.unsplash.com/photo-1574182245586-1d2d5e47c62b" },
      { id: 9, name: "Adidas Mens Yellow Tracksuit", price: 2799.00, originalPrice: 6499.00, image: "https://images.unsplash.com/photo-1618517351616-38fb9e37d39e" },
      { id: 10, name: "Nike Mens White Sneakers", price: 3999.00, originalPrice: 8999.00, image: "https://images.unsplash.com/photo-1607522370275-f14206abe5d3" },
      { id: 11, name: "Puma Mens Red Tracksuit", price: 2599.00, originalPrice: 5999.00, image: "https://images.unsplash.com/photo-1626240734709-95e39e7c6386" },
      { id: 12, name: "Jordan Mens Black Hoodie", price: 3199.00, originalPrice: 7499.00, image: "https://images.unsplash.com/photo-1590658006821-04f4008d5717" },
      { id: 13, name: "Adidas Mens Grey Joggers", price: 1899.00, originalPrice: 4899.00, image: "https://images.unsplash.com/photo-1604272490182-1e5f0e3a0e32" },
      { id: 14, name: "Nike Mens Blue Tracksuit", price: 2899.00, originalPrice: 6999.00, image: "https://images.unsplash.com/photo-1612902376491-7a8a99b424e8" },
      { id: 15, name: "Puma Mens White Jacket", price: 3299.00, originalPrice: 7999.00, image: "https://images.unsplash.com/photo-1600585153490-76fb20a0d33b" }
    ];

    // Function to create a product card
    function createProductCard(product) {
      const discount = Math.round(((product.originalPrice - product.price) / product.originalPrice) * 100);
      return `
        <div class="col-12 mb-4 position-relative">
          <div class="card h-100">
            <div class="product-card-container">
              <img src="${product.image}" class="card-img-top" alt="${product.name}" onload="console.log('Successfully loaded image for ${product.name}: ${product.image}')" onerror="this.src='https://images.unsplash.com/photo-1556906781-9a412961c28c'; console.error('Failed to load image for ${product.name}: ${product.image}')">
              <a href="/products" class="btn btn-primary quick-view quick-view-overlay">QUICK VIEW</a>
            </div>
            <div class="discount-badge">${discount}%</div>
            <div class="card-body text-center">
              <h5 class="card-title">${product.name}</h5>
              <div class="star-rating mb-2">
                <i class="bi bi-star-fill"></i>
                <i class="bi bi-star-fill"></i>
                <i class="bi bi-star-fill"></i>
                <i class="bi bi-star-fill"></i>
                <i class="bi bi-star-fill"></i>
              </div>
              <p class="card-text">
                <span class="text-decoration-line-through text-muted">₹${product.originalPrice.toFixed(2)}</span>
                <span class="text-danger fw-bold">₹${product.price.toFixed(2)}</span>
              </p>
            </div>
          </div>
        </div>
      `;
    }

    // Function to display products in a container
    function displayProducts(productList, containerId, start, end) {
      const container = document.getElementById(containerId);
      const selectedProducts = productList.slice(start, end);
      selectedProducts.forEach(product => {
        if (containerId === 'product-list') {
          const discount = Math.round(((product.originalPrice - product.price) / product.originalPrice) * 100);
          const productCard = `
            <div class="col-md-4 mb-4 position-relative">
              <div class="card h-100">
                <div class="product-card-container">
                  <img src="${product.image}" class="card-img-top" alt="${product.name}" onload="console.log('Successfully loaded image for ${product.name}: ${product.image}')" onerror="this.src='https://images.unsplash.com/photo-1556906781-9a412961c28c'; console.error('Failed to load image for ${product.name}: ${product.image}')">
                  <a href="/products" class="btn btn-primary quick-view quick-view-overlay">QUICK VIEW</a>
                </div>
                <div class="discount-badge">${discount}%</div>
                <div class="card-body text-center">
                  <h5 class="card-title">${product.name}</h5>
                  <div class="star-rating mb-2">
                    <i class="bi bi-star-fill"></i>
                    <i class="bi bi-star-fill"></i>
                    <i class="bi bi-star-fill"></i>
                    <i class="bi bi-star-fill"></i>
                    <i class="bi bi-star-fill"></i>
                  </div>
                  <p class="card-text">
                    <span class="text-decoration-line-through text-muted">₹${product.originalPrice.toFixed(2)}</span>
                    <span class="text-danger fw-bold">₹${product.price.toFixed(2)}</span>
                  </p>
                </div>
              </div>
            </div>
          `;
          container.innerHTML += productCard;
        } else {
          container.innerHTML += createProductCard(product);
        }
      });
    }

    // Update cart total in navbar
    function updateCartTotal() {
      const cart = JSON.parse(localStorage.getItem('cart')) || [];
      const total = cart.reduce((sum, item) => sum + item.price, 0);
      document.getElementById('cart-total-nav').textContent = total.toFixed(2);
    }

    // Update cart sidebar content
    function updateCartSidebar() {
      const cart = JSON.parse(localStorage.getItem('cart')) || [];
      const cartItemsContainer = document.getElementById('cart-sidebar-items');
      const cartTotalElement = document.getElementById('cart-sidebar-total');
      cartItemsContainer.innerHTML = '';

      if (cart.length === 0) {
        cartItemsContainer.innerHTML = '<p class="text-center">Your cart is empty.</p>';
      } else {
        cart.forEach(item => {
          const cartItem = `
            <div class="cart-item d-flex align-items-center mb-3">
              <img src="${item.image}" alt="${item.name}" class="cart-item-img">
              <div class="cart-item-details ms-3">
                <h6>${item.name}</h6>
                <p>₹${item.price.toFixed(2)}</p>
              </div>
            </div>
          `;
          cartItemsContainer.innerHTML += cartItem;
        });
      }

      const total = cart.reduce((sum, item) => sum + item.price, 0);
      cartTotalElement.textContent = total.toFixed(2);
    }

    // Load products and cart total on page load
    document.addEventListener('DOMContentLoaded', () => {
      displayProducts(products, 'product-list', 0, 5);
      displayProducts(products, 'latest-product-list', 5, 8);
      displayProducts(products, 'best-selling-product-list', 8, 11);
      updateCartTotal();
    });
  </script>
</body>
</html>