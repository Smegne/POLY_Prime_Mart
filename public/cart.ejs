  <script>
    const isDebug = true; // Set to false in production

    // Search bar toggle functionality
    document.querySelector('.search-icon').addEventListener('click', function() {
      const searchBar = document.querySelector('.search-bar');
      searchBar.classList.toggle('active');
      if (searchBar.classList.contains('active')) {
        searchBar.focus();
      }
    });

    // Function to clean invalid cart data
    function cleanCartData() {
      let cart = JSON.parse(localStorage.getItem('cart')) || [];
      cart = cart.filter(item => {
        return item.id && Number(item.price) > 0 && Number(item.quantity) > 0 && item.name && item.images && item.size;
      });
      localStorage.setItem('cart', JSON.stringify(cart));
      if (isDebug) console.log('Cleaned cart data:', cart);
      return cart;
    }

    // Function to remove a specific item from the cart
    function removeCartItem(id, size) {
      let cart = JSON.parse(localStorage.getItem('cart')) || [];
      cart = cart.filter(item => !(item.id === id && item.size === size));
      localStorage.setItem('cart', JSON.stringify(cart));
      if (isDebug) console.log(`Removed item: id=${id}, size=${size}, Updated cart:`, cart);
      updateCartTable();
      updateCartTotal();
    }

    // Function to update quantity of a specific item
    function updateQuantity(id, size, change) {
      let cart = JSON.parse(localStorage.getItem('cart')) || [];
      cart = cart.map(item => {
        if (item.id === id && item.size === size) {
          item.quantity = Math.max(1, Number(item.quantity) + change); // Prevent quantity from going below 1
        }
        return item;
      });
      localStorage.setItem('cart', JSON.stringify(cart));
      if (isDebug) console.log(`Updated quantity: id=${id}, size=${size}, change=${change}, Updated cart:`, cart);
      updateCartTable();
      updateCartTotal();
    }

    // Function to update cart table
    function updateCartTable() {
      const cart = cleanCartData();
      const cartItemsContainer = document.getElementById('cart-items');
      cartItemsContainer.innerHTML = '';

      if (!cart || cart.length === 0) {
        cartItemsContainer.innerHTML = '<tr><td colspan="4" class="text-center">Your cart is empty.</td></tr>';
        if (isDebug) console.log('Cart is empty');
        return;
      }

      cart.forEach(item => {
        const price = Number(item.price) || 0;
        const quantity = Number(item.quantity) || 1;
        const image = Array.isArray(item.images) && item.images.length > 0 ? item.images[0] : 'https://images.unsplash.com/photo-1556906781-9a412961c28c';
        const subtotal = price * quantity;
        const cartItem = `
          <tr>
            <td>
              <div class="d-flex align-items-center">
                <button class="remove-cart-item" data-id="${item.id}" data-size="${item.size}">❌</button>
                <img src="${image}" alt="${item.name}" class="cart-item-img ms-2">
                <div class="ms-3">
                  <p class="mb-0">${item.name}</p>
                  <small>Size: ${item.size}</small>
                </div>
              </div>
            </td>
            <td>Birr${price.toFixed(2)}</td>
            <td>
              <div class="quantity-control">
                <button onclick="updateQuantity(${item.id}, '${item.size}', -1)">-</button>
                <input type="text" value="${quantity}" readonly>
                <button onclick="updateQuantity(${item.id}, '${item.size}', 1)">+</button>
              </div>
            </td>
            <td>Birr${subtotal.toFixed(2)}</td>
          </tr>
        `;
        cartItemsContainer.innerHTML += cartItem;
        if (isDebug) console.log(`Rendered cart item: id=${item.id}, name=${item.name}, price=${price}, quantity=${quantity}`);
      });

      // Add event listeners to remove buttons
      document.querySelectorAll('.remove-cart-item').forEach(button => {
        button.addEventListener('click', () => {
          const id = parseInt(button.dataset.id);
          const size = button.dataset.size;
          removeCartItem(id, size);
        });
      });
    }

    // Function to update cart totals
    function updateCartTotal() {
      const cart = cleanCartData();
      const subtotal = cart.reduce((sum, item) => {
        const price = Number(item.price) || 0;
        const quantity = Number(item.quantity) || 1;
        return sum + price * quantity;
      }, 0);
      document.getElementById('cart-subtotal').textContent = `Birr${subtotal.toFixed(2)}`;
      document.getElementById('cart-total').textContent = `Birr${subtotal.toFixed(2)}`; // Assuming shipping is free or not calculated yet
      document.getElementById('cart-total-nav').textContent = subtotal.toFixed(2);
      if (isDebug) console.log(`Updated cart totals: subtotal=${subtotal}`);
    }

    // Function to handle "Update Cart" button
    function updateCart() {
      updateCartTable();
      updateCartTotal();
      alert('Cart updated successfully!');
    }

    // Load cart data on page load
    document.addEventListener('DOMContentLoaded', () => {
      cleanCartData();
      updateCartTable();
      updateCartTotal();
    });
  </script>
