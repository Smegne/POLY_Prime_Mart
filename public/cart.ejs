        previewDiv.innerHTML = '<p><strong>File Preview:</strong></p>';
        previewDiv.innerHTML += '<img src="' + e.target.result + '" class="img-fluid" style="max-width: 100px;">';
      }
      reader.readAsDataURL(file);
    } else {
      previewDiv.innerHTML = '<p>No file selected.</p>';
    }
  }
