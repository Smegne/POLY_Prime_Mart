  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <script src="/scripts.js"></script>
  <script>
    // Search bar toggle functionality
    document.querySelector('.search-icon').addEventListener('click', function() {
      const searchBar = document.querySelector('.search-bar');
      searchBar.classList.toggle('active');
      if (searchBar.classList.contains('active')) {
        searchBar.focus();
      }
    });

    // Function to clean invalid cart data
    function cleanCartData() {
      let cart = JSON.parse(localStorage.getItem('cart')) || [];
      cart = cart.filter(item => {
        return item.id && Number(item.price) > 0 && Number(item.quantity) > 0 && item.name && item.images && item.size;
      });
      localStorage.setItem('cart', JSON.stringify(cart));
      return cart;
    }

    // Update cart total in navbar
    function updateCartTotal() {
      const cart = JSON.parse(localStorage.getItem('cart')) || [];
      const total = cart.reduce((sum, item) => {
        const price = Number(item.price) || 0;
        const quantity = Number(item.quantity) || 1;
        return sum + price * quantity;
      }, 0);
      document.getElementById('cart-total-nav').textContent = isNaN(total) ? '0.00' : total.toFixed(2);
    }

    // Handle account section navigation
    document.querySelectorAll('.nav-link[data-section]').forEach(link => {
      link.addEventListener('click', (e) => {
        e.preventDefault();
        const section = link.getAttribute('data-section');

        // Hide all sections
        document.querySelectorAll('.account-section').forEach(section => {
          section.style.display = 'none';
        });

        // Show selected section
        document.getElementById(`${section}-section`).style.display = 'block';

        // Update active class for sidebar links
        document.querySelectorAll('.account-sidebar .nav-link').forEach(navLink => {
          navLink.classList.remove('active');
        });
        document.querySelector(`.account-sidebar .nav-link[data-section="${section}"]`).classList.add('active');

        // Update active class for navigation buttons
        document.querySelectorAll('.account-nav-buttons .nav-link').forEach(navButton => {
          navButton.classList.remove('active');
        });
        document.querySelector(`.account-nav-buttons .nav-link[data-section="${section}"]`).classList.add('active');
      });
    });

    // Load cart total on page load
    document.addEventListener('DOMContentLoaded', () => {
      cleanCartData();
      updateCartTotal();
    });
  </script>
</body>
</html>