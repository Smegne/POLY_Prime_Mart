    body {
      padding-top: 70px;
    }

    .navbar {
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    .search-container {
      position: relative;
    }

    .search-bar {
      display: none;
      position: absolute;
      top: 100%;
      right: 0;
      width: 200px;
      z-index: 1000;
    }

    .search-bar.active {
      display: block;
    }

    .my-account-section {
      padding: 50px 0;
    }

    .account-sidebar {
      border-right: 1px solid #eee;
      padding-right: 20px;
    }

    .account-sidebar h2 {
      font-size: 1.5rem;
      margin-bottom: 20px;
    }

    .account-sidebar ul {
      list-style: none;
      padding: 0;
    }

    .account-sidebar ul li {
      margin-bottom: 10px;
    }

    .account-sidebar ul li a {
      color: #333;
      text-decoration: none;
      font-weight: bold;
      text-transform: uppercase;
    }

    .account-sidebar ul li a.active {
      color: #003087;
      border-left: 3px solid #003087;
      padding-left: 10px;
    }

    .account-sidebar ul li a:hover {
      color: #003087;
    }

    .account-content {
      padding-left: 20px;
    }

    .account-content h3 {
      font-size: 1.2rem;
      margin-bottom: 20px;
    }

    .account-content p {
      margin-bottom: 20px;
    }

    .account-nav-buttons {
      display: flex;
      flex-wrap: wrap;
      gap: 10px;
      margin-top: 20px;
    }

    .account-nav-buttons a {
      padding: 10px 20px;
      border: 1px solid #ccc;
      border-radius: 5px;
      text-decoration: none;
      color: #333;
      font-weight: bold;
      text-transform: uppercase;
    }

    .account-nav-buttons a.active {
      background-color: #003087;
      color: white;
      border-color: #003087;
    }

    .account-nav-buttons a:hover {
      background-color: #f8f9fa;
    }

    @media (max-width: 767px) {
      .account-sidebar {
        border-right: none;
        border-bottom: 1px solid #eee;
        padding-bottom: 20px;
        margin-bottom: 20px;
      }

      .account-content {
        padding-left: 0;
      }

      .account-nav-buttons {
        flex-direction: column;
      }

      .account-nav-buttons a {
        width: 100%;
        text-align: center;
      }
    }
  </style>
</head>
