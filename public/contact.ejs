<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Prime Mart - Contact</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
  <link rel="stylesheet" href="/styles.css">
  <style>
    body {
      padding-top: 70px;
    }
    .contact-section {
      padding: 60px 0;
    }
    .contact-section h2 {
      font-size: 2.5rem;
      font-weight: bold;
      margin-bottom: 40px;
      text-align: center;
    }
    .contact-form .form-control {
      margin-bottom: 20px;
      border-radius: 5px;
      border: 1px solid #ced4da;
    }
    .contact-form textarea {
      resize: none;
    }
    .contact-form button {
      background-color: #ff6200;
      border-color: #ff6200;
      padding: 10px 20px;
      font-weight: bold;
    }
    .contact-form button:hover {
      background-color: #e55a00;
      border-color: #e55a00;
    }
    .contact-details h5 {
      font-size: 1.5rem;
      font-weight: bold;
      margin-bottom: 20px;
    }
    .contact-details p {
      margin-bottom: 15px;
      font-size: 1rem;
      color: #333;
    }
    .contact-details i {
      margin-right: 10px;
      color: #ff6200;
    }
    .map-container {
      margin-top: 30px;
    }
    .map-container iframe {
      width: 100%;
      height: 300px;
      border: 0;
    }
    /* Highlight the active nav link */
    .navbar-nav .nav-link.active {
      color: #ff6200 !important;
      font-weight: bold;
    }
  </style>
</head>
<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm fixed-top">
    <div class="container">
      <a class="navbar-brand" href="/">
        <img src="https://primemartdeals.com/wp-content/uploads/2024/08/Logo-13.png" alt="Prime Mart Logo" style="height: 40px;">
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav mx-auto">
          <li class="nav-item">
            <a class="nav-link" href="/">HOME</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/about">ABOUT US</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/shop">SHOP</a>
          </li>
          <li class="nav-item">
            <a class="nav-link active" href="/contact">CONTACT</a>
          </li>
        </ul>
        <ul class="navbar-nav ms-auto">
          <% if (session.user) { %>
            <li class="nav-item">
              <a class="nav-link" href="/wishlist">WISHLIST</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/cart">CART | ₹<span id="cart-total-nav">0.00</span></a>
            </li>
            <li class="nav-item">
              <span class="nav-link">Welcome, <%= session.user %></span>
            </li>
            <li class="nav-item">
              <a class="nav-link btn btn-outline-danger" href="/logout">LOGOUT</a>
            </li>
          <% } else { %>
            <li class="nav-item">
              <div class="search-container">
                <i class="bi bi-search search-icon"></i>
                <input type="text" class="search-bar" placeholder="Search...">
              </div>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/cart">CART | ₹<span id="cart-total-nav">0.00</span></a>
            </li>
            <li class="nav-item">
              <a class="nav-link btn btn-outline-primary" href="#" data-bs-toggle="modal" data-bs-target="#authModal" data-form="login">LOGIN</a>
            </li>
          <% } %>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Contact Section -->
  <section class="contact-section">
    <div class="container">
      <h2>CONTACT US</h2>
      <div class="row">
        <!-- Contact Form -->
        <div class="col-md-6 mb-4">
          <form class="contact-form" action="/contact" method="POST">
            <input type="text" class="form-control" name="name" placeholder="Your Name" required>
            <input type="email" class="form-control" name="email" placeholder="Your Email" required>
            <input type="text" class="form-control" name="subject" placeholder="Subject" required>
            <textarea class="form-control" name="message" rows="5" placeholder="Your Message" required></textarea>
            <button type="submit" class="btn btn-primary">SEND MESSAGE</button>
          </form>
        </div>
        <!-- Contact Details and Map -->
        <div class="col-md-6">
          <div class="contact-details">
            <h5>GET IN TOUCH</h5>
            <p><i class="bi bi-shop"></i> Poly Prime Mart</p>
            <p><i class="bi bi-geo-alt"></i> Kebele 10, POLY CAMPUS,Bahirdar, Ethiopia</p>
            <p><i class="bi bi-telephone"></i>+251962935163</p>
            <p><i class="bi bi-envelope"></i> <a href="mailto:support@primemartdeals.com">support@Polyprimemart.com</a></p>
          </div>
          <div class="map-container">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2951.6258363724482!2d37.39296057356017!3d11.597682188605416!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x1644ce107991537d%3A0x3e8bedd070a29619!2sBahir%20Dar%20University%20Poly%20Campus!5e1!3m2!1sen!2sin!4v1745801841360!5m2!1sen!2sin" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Footer -->
  <footer class="bg-purple text-white py-4">
    <div class="container">
      <div class="row">
        <div class="col-md-4">
          <h5>ABOUT US</h5>
          <p>
            Welcome to Prime Mart, the ultimate destination for premium BRANDED clothing. We specialize in offering a curated selection of high-quality, stylish apparel from top global brands. Our collection is designed for fashion-conscious individuals.
          </p>
        </div>
        <div class="col-md-4">
          <h5>QUICK LINKS</h5>
          <ul class="list-unstyled">
            <li><a href="/about" class="text-white">About us</a></li>
            <li><a href="/privacy" class="text-white">Privacy Policy</a></li>
            <li><a href="/terms" class="text-white">Terms and Conditions</a></li>
          </ul>
        </div>
        <div class="col-md-4">
          <h5>REACH US AT</h5>
          <p>PRIME MART DEALS</p>
          <p><a href="mailto:support@classicstore.co" class="text-white">support@classicstore.co</a></p>
        </div>
      </div>
      <div class="text-center mt-3">
        <p>© 2025 Prime Mart. All rights reserved.</p>
      </div>
    </div>
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <script src="/scripts.js"></script>
  <script>
    // Update cart total in navbar
    function updateCartTotal() {
      const cart = JSON.parse(localStorage.getItem('cart')) || [];
      const total = cart.reduce((sum, item) => sum + item.price, 0);
      document.getElementById('cart-total-nav').textContent = total.toFixed(2);
    }

    // Load cart total on page load
    document.addEventListener('DOMContentLoaded', () => {
      updateCartTotal();
    });
  </script>
</body>
</html>
